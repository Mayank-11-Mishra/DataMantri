# DataViz Platform - Database Environment Configuration
# Copy this file to .env and update with your actual values

# Database Type (postgresql, mysql, sqlite)
DB_TYPE=postgresql

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=Data
DB_SCHEMA=public

# For MySQL (if using MySQL instead of PostgreSQL)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your_password_here
# DB_NAME=dataviz

# For SQLite (if using SQLite for development)
# DB_TYPE=sqlite
# SQLITE_PATH=./dataviz.db

# Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SSL Configuration (for production)
DB_SSL_MODE=prefer
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_CA=/path/to/ca-cert.pem

# Query Settings
DB_QUERY_TIMEOUT=300
DB_ECHO_SQL=false

# Admin Database (used for creating the main database)
DB_ADMIN_DATABASE=postgres

# Application Settings
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=true

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
UPLOAD_FOLDER=./uploads

# Cache Settings (Redis - optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/dataviz.log
